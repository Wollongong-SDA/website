---
interface Props {
  link?: string
  external?: boolean
  newtab?: boolean
  class?: string
}

const external = Astro.props.link?.startsWith('http') || Astro.props.external
---

<a
  class:list={[
    'bg-charcoal',
    'font-medium',
    'text-lg',
    'text-white',
    'px-6',
    'py-3',
    'inline-block',
    'transition',
    'hover:bg-charcoal-faded',
    'border-1.5',
    'border-charcoal-faded',
    'w-fit',
    Astro.props.class,
  ]}
  href={Astro.props.link}
  target={Astro.props.newtab ? '_blank' : undefined}
  rel={Astro.props.newtab ? 'noopener noreferrer' : undefined}>
  <slot />
  {external && <div class="i-mdi-link-variant inline-block ml-2" />}
</a>

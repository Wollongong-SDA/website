---
import Button from './Button.astro'

interface Props {
  heading: string
  button?: {
    text: string
    link: string
    newtab?: boolean
  }
}
---

<div class="flex flex-col items-center mx-auto my-16 gap-4 px-4">
  <p class="heading-3 mb-4 text-center">{Astro.props.heading}</p>
  <p class="text-center text-charcoal text-lg max-w-2xl"><slot /></p>
  {
    Astro.props.button && (
      <Button class="mt-4" link={Astro.props.button.link} newtab={Astro.props.button.newtab}>
        {Astro.props.button.text}
      </Button>
    )
  }
</div>

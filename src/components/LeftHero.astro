---
import Button from './Button.astro'

interface Props {
  heading: string
  buttons?: [
    {
      text: string
      link: string
      newtab?: boolean
    },
  ]
}
---

<div class="flex flex-col items-start mx-auto my-12 px-8 lg:mx-20vw">
  <p class="heading-3 mb-4">{Astro.props.heading}</p>
  <p class="text-charcoal text-lg font-400 max-w-2xl"><slot /></p>
  {
    Astro.props.buttons?.map((button) => (
      <Button class="mt-4" link={button.link} newtab={button.newtab}>
        {button.text}
      </Button>
    ))
  }
</div>

---
import '@unocss/reset/tailwind.css'
import '../styles/global.css'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title?: string
  fullTitle?: string
  jsonld?: Array<unknown>
}

const title = Astro.props.fullTitle // this looks ugly
  ? Astro.props.fullTitle
  : Astro.props.title
    ? `${Astro.props.title} | Illawarra Adventist`
    : 'Illawarra Adventist'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {
      Astro.props.jsonld &&
        Astro.props.jsonld.map((ld) => <script type="application/ld+json" set:html={JSON.stringify(ld)} />)
    }
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
